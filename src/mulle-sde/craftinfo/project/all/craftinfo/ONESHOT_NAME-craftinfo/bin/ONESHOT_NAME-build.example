install_main()
{
   log_entry "install_main" "$@"

   if ! build_main "$@"
   then
      return 1
   fi

   #
   # Collect results and place them into PREFIX if needed. F.e. if the Makefile
   # does not support PREFIX.
   #
   # logging_tee_eval_exekutor "${LOGFILE}" "${TEEFILE}" \
